  {{world-flag 'us' 32}}
  {{world-flag 'uk' 32}}
  {{world-flag 'ca' 32}}
  {{world-flag 'fr' 32}}
  {{world-flag 'ge' 32}}
    <p>\{{world-flag 'us' 32}}</p>
